<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEscola.Tela.CadastroEscola">
    <StackLayout>
        <StackLayout BackgroundColor="White" HeightRequest="700" WidthRequest="200" Margin="20">
            <Label Text="Escola" TextColor="Black" FontSize="32" HorizontalTextAlignment="Center"/>

            <Label Text="Nome:" TextColor="Black" FontSize="24" HorizontalTextAlignment="Start"/>
            <Entry Placeholder="Nome" PlaceholderColor="Black" BackgroundColor="LightBlue" Margin="20,0,20,0"
                   x:Name="txtNome"/>

            <Label Text="Cidade:" TextColor="Black" FontSize="24" HorizontalTextAlignment="Start"/>
            <Entry Placeholder="Cidade" PlaceholderColor="Black" BackgroundColor="LightBlue" Margin="20,0,20,0"
                   x:Name="txtCidade"/>

            <Button Text="Cadastrar" Clicked="CadastrarEscola"/>
            <Button Text="Cadastro Professores" Clicked="GoCadastroProfessores"/>
            <Button Text="Cadastro Estudante" Clicked="GoCadastroEstudante"/>
            <Button Text="Proximo" Margin="20" HorizontalOptions="Center" VerticalOptions="EndAndExpand" 
                    Clicked="MoverNext"/>
        </StackLayout>
    </StackLayout>
</ContentPage>